{
  "name": "lingua-node",
  "version": "0.1.0",
  "description": "Wrapper for lingua-rs in NodeJS",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xanthous-tech/lingua-node.git"
  },
  "author": "Simon Liang <simon@x-tech.io>",
  "license": "Apache-2.0",
  "files": [
    "native",
    "lib"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/xanthous-tech/lingua-node/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "scripts": {
    "build": "neon build",
    "build:typescript": "tsc",
    "clean:javascript": "rimraf lib",
    "clean:artifact": "rimraf native/target && rimraf native/artifacts.json",
    "dev": "npm run build && npm run build:typescript && npm start",
    "format": "prettier --write",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint --fix",
    "package": "npm run patch && node-pre-gyp -- package",
    "patch": "patch-package",
    "postinstall": "node-pre-gyp -- install --update-binary --fallback-to-build=false || npm run build -- --release",
    "start": "DEBUG=lingua-node:* node .",
    "upload-binary": "npm run package && node-pre-gyp-github publish"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "neon-cli": "^0.5.3",
    "node-pre-gyp": "^0.17.0",
    "patch-package": "^6.2.2",
    "threads": "^1.6.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "node-pre-gyp-github": "^1.4.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && npm run build:typescript"
    }
  },
  "volta": {
    "node": "14.15.1",
    "yarn": "1.22.10"
  }
}
